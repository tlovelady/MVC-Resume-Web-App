@model Resume.Models.ResumeViewModel.ResumeViewModel

@{
    ViewData["Title"] = Model.Contacts.First().FullName;
}
<table class="table">
    <thead>
    </thead>
    <tbody>
        <p>
            <h2>
                @Html.DisplayFor(i => Model.Contacts.First().FullName)
            </h2>
            <h4>
                @Html.DisplayFor(i => Model.Contacts.First().PhoneNumber)
            </h4>
            <h4>
                @Html.DisplayFor(i => Model.Contacts.First().EmailAddress)
            </h4>
        </p>
        <p>
            <h3>Skills:</h3>
            @foreach (var cat in Model.Categories)
            {
                <h4>@Html.DisplayFor(i => cat.Name)</h4>
                <ul>
                    @foreach (var skill in Model.Skills)
                    {
                        if (skill.Category.Name == cat.Name)
                        {
                            <li>@Html.DisplayFor(i => skill.Name)</li>
                        }
                    }
                </ul>
            }
        </p>
        <p>
            <h3>Certifications:</h3>
            @foreach (var cat in Model.Categories)
            {
                <h4>@Html.DisplayFor(i => cat.Name)</h4>
                <ul>
                    @foreach (var cert in Model.Certifications)
                    {
                        if (cert.Category.Name == cat.Name)
                        {
                            <li>@Html.DisplayFor(i => cert.Name)</li>
                        }
                    }
                </ul>
            }
        </p>
        <p>
            <h3>Experience:</h3>
            @foreach (var exp in Model.Experiences)
            {
                @Html.DisplayFor(p => exp.Title) @: At @Html.DisplayFor(i => exp.Workplace)
                <br /> @Html.DisplayFor(s => exp.StartDate) @: - @Html.DisplayFor(e => exp.EndDate)
                <h4>Responsibilities</h4>
                <ul>
                    @foreach (var resp in exp.Responsibilities)
                    {
                        <li>@Html.DisplayFor(p => resp.Name)</li>
                    }
                </ul>

            }
        </p>
        <p>
            <h3>Education:</h3>
            @foreach (var edu in Model.Educations)
            {
                <h4>@Html.DisplayFor(i => edu.InstitutionName)</h4>
                <br /> @: Graduated @Html.DisplayFor(j => edu.GraduationYear)
                <br /> @Html.DisplayFor(i => edu.GPA) @: GPA
            }
        </p>
    </tbody>
</table>